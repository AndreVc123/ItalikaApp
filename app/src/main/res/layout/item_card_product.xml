<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerCardProduct"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="5sp"
    app:cardCornerRadius="10sp"
    app:cardElevation="20sp"
    android:layout_marginVertical="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10sp">

        <RelativeLayout
            android:id="@+id/containerSearchImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="185sp"
                android:scaleType="fitXY"
                android:src="@color/white"/>

            <TextView
                android:id="@+id/txtPromocion"
                android:layout_width="93sp"
                android:layout_height="30sp"
                android:text="@string/promocion"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAlignment="center"
                android:background="@color/colorRed"
                android:gravity="center_vertical"
                android:layout_alignBottom="@id/imgProduct"
                android:textStyle="bold"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorBlueAccent"
            android:layout_marginTop="14sp"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4sp"/>

        <TextView
            android:id="@+id/txtModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#747B81"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            android:layout_marginBottom="4sp"/>

        <TextView
            android:id="@+id/txtPriceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="$360.00"
            android:textSize="17sp"
            android:textColor="#747B81"
            android:textStyle="bold"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            android:layout_marginBottom="4sp"/>

        <TextView
            android:id="@+id/txtPricePreviousProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="$490.20"
            android:textSize="14sp"
            android:textColor="#747B81"
            android:textStyle="bold"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            android:layout_marginBottom="4sp"
            android:visibility="gone"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>